@inherits LayoutComponentBase
@inject LoginState _loginState;

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if(_loginState.IsLogin)
            {
                <a href="" target="_blank">您好 @_loginState.User.Name</a>
            }
        </div>

        <article class="content px-4">
            <div class="container">
                @Body
            </div>
        </article>
    </main>
</div>
