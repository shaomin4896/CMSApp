@using AntDesign
@using CaseManagementAPI.Models;

<Card Title="血液檢驗" class="col-12">
	<Extra></Extra>
	<Body>
		<FormItem Label="檢驗日期">
			<DatePicker @bind-Value="@bloodTest.TestDate" DefaultValue="@DateTime.Now" TValue="DateTime" Picker="@DatePickerType.Date" />
		</FormItem>
		<FormItem Label="糖化血色素">
			<Input @bind-Value="@bloodTest.HBAIC" Placeholder="HBAIC" />
		</FormItem>
		<FormItem Label="血糖測量值">
			<Input @bind-Value="@bloodTest.BloodSugarBeforeMeal" DefaultValue="@null" Placeholder="餐前血糖測量值"/>
		</FormItem>
		<FormItem Label="      ">
			<Input @bind-Value="@bloodTest.BloodSugarAfterMeal" DefaultValue="@null" Placeholder="餐後血糖測量值"/>
		</FormItem>
		<FormItem Label="三酸甘油脂">
			<Input @bind-Value="@bloodTest.TG" DefaultValue="@null" Placeholder="TG"/>
		</FormItem>
		<FormItem Label="肌酸酐">
			<Input @bind-Value="@bloodTest.Creatinine" DefaultValue="@null" Placeholder="Creatinine"/>
		</FormItem>
	</Body>
</Card>

@code
{
	[Parameter]
	public BloodTest bloodTest { get; set; }
}